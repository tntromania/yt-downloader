{
  "name": "youtubepro",
  "version": "1.0.0",
  "description": "Universal Video Downloader with AI Translation",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "postinstall": "node -e \"const{execSync}=require('child_process');try{execSync('yt-dlp --version')}catch(e){console.log('Installing yt-dlp...');execSync('curl -L https://github.com/yt-dlp/yt-dlp/releases/latest/download/yt-dlp -o /usr/local/bin/yt-dlp && chmod a+rx /usr/local/bin/yt-dlp')}\""
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "express": "^4.22.1",
    "cors": "^2.8.5",
    "axios": "^1.7.9",
    "@vitalets/google-translate-api": "^9.2.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.11"
  }
}